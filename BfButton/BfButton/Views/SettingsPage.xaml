<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BfButton.Views.SettingsPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Время захвата, в секундах"></Label>
            <StackLayout Orientation="Horizontal">
                <Entry Placeholder="Время захвата" x:Name="TimeToCaptureEntry" HorizontalOptions="FillAndExpand"></Entry>
            </StackLayout>
            <Label Text="Время уничтожения, в секундах"></Label>
            <StackLayout Orientation="Horizontal" >
                <Entry Placeholder="Время уничтожения" x:Name="TimeToDestroyEntry" HorizontalOptions="FillAndExpand"></Entry>
            </StackLayout>
            
            <Button Text="Сохранить" x:Name="SaveButton" Clicked="SaveButton_OnClicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>